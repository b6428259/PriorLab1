@startuml
title getAllMonster()

actor User as u
boundary API as a
database Database as d

u->a : GET /api/v1/monster
a->d: findAll()
a->a : Validate monsters

alt Monster found
    d-->a : monsters
    a->u : 200 OK
    a->u : "Data retrieved successfully"
    a->u : JSON Monster data
else Monster not found
    a->u : 404 Not Found
    a->u : "Monster not found"
end

@enduml
